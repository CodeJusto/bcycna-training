<%= tinymce_assets %>

<h1>Now editing <%= @lesson.name %> for <%= @course.name %></h1>
  <%= link_to "Return to lesson list", admin_course_lessons_path %>
  <%= link_to "Delete lesson", admin_course_lesson_path(@course, @lesson.id), method: :delete, data: {confirm: "Are you sure you want to delete this lesson?"} %>
<%= form_for @lesson, html: { multipart: true }, url: {action:"update"} do |f| %>
 
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, id: "lesson_content", class: "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :featured_image %><br>
    <%= f.file_field :featured_image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= tinymce :plugins => ["wordcount", "imagetools, media, code"] %>