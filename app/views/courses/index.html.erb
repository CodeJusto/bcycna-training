<h1>Welcome <%= current_user.name %></h1>
<div class="row">
  <div class="col s12">
    <%= form_tag courses_path, {class: 'filter'} %>
    <div class="input-field col s6">
      <%= text_field_tag :search %>
      <label for="search">Filter Results</label>
    </div>
  </div>
  <div class="col s3 filter-icon">
    <img id="publisher" src="http://curvecommunications.com//blog/wp-content/uploads/Publisher.png">
  </div>
  <div class="col s3 filter-icon">
    <img id="editor" src="http://curvecommunications.com//blog/wp-content/uploads/Editor.png">
  </div>
  <div class="col s3 filter-icon">
    <img id="sales" src="http://curvecommunications.com//blog/wp-content/uploads/Sales.png">
  </div>
  <div class="col s3 filter-icon">
    <img id="reporter" src="http://curvecommunications.com//blog/wp-content/uploads/Reporter.png">
  </div>
</div>


<div class="row">
  <div class="col s12">
    <div class="results">
      <% unless @courses.nil? %>
        <% @courses.each do |course| %>

            <%= render 'course_list', course: course %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>